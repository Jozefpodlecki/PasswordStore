<Window x:Class="PasswordStore.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordStore"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="{x:Static local:Constants.AboutWindowTitle}" Height="186.667" Width="400">
    <Grid>
        <Label
            Content="{x:Static local:Constants.Author}"
            HorizontalAlignment="Left"
            Margin="10,72,0,0"
            VerticalAlignment="Top"/>
        <TextBlock
            HorizontalAlignment="Left"
            Margin="16,118,0,0"
            TextWrapping="Wrap"
            Text="{x:Static local:Constants.Credits}"
            VerticalAlignment="Top"/>
        <Label
            Content="{x:Static local:Constants.ApplicationName}"
            HorizontalAlignment="Left"
            Margin="10,10,0,0"
            VerticalAlignment="Top"
            RenderTransformOrigin="-0.395,0.013"/>
        <TextBlock
            HorizontalAlignment="Left"
            Margin="16,41,0,0"
            TextWrapping="Wrap"
            Text="{x:Static local:Constants.ApplicationDescription}"
            VerticalAlignment="Top"/>

    </Grid>
</Window>
